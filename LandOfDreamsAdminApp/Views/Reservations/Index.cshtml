@model List<LandOfDreamsAdminApp.Models.Reservation>

<div class="container">
   

  <div class="row m-4">
        <table class="table table-striped table-bordered text-center" style="box-shadow: 0 0 15px rgba(128, 0, 128, 0.5);">
            <thead class="bg-purple text-white">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Booking Date</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Total Cost</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="text-center">No active reservations</td>
                    </tr>
                }
                else
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];

                        <tr>
                            <td>@(i + 1)</td>
                            <td>@item.BookingDate?.ToString("yyyy-MM-dd")</td>
                            <td>@item.FirstName @item.LastName</td>
                            <td>@item.Email</td>
                            <td>@(item.PhoneNumberPrefix + item.PhoneNumber)</td>
                            <td>@item.TotalCost?.ToString("C")</td>
                            <td>

                                <a asp-action="CreateInvoice" asp-route-Id="@item.Id" class="btn btn-success" style="background:#C576F6">Create Invoice</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .bg-purple {
        background-color: #800080 !important;
    }

</style>